<div class=" flex flex-col justify-center items-center">
  <div class="container mx-auto px-10">
    <div>
      <%= month_calendar events: @drugs do |date, drugs| %>
        <span class="block text-xs font-semibold text-gray-900"><%= date.day %></span>
          <% drugs.each do |drug| %>
            <div class="mt-1">
              <%= link_to drug.drug_name, with_date_calendar_path(id: drug.id, date: date.to_s), class: "rounded bg-gray-300 w-full hover:text-indigo-900" %>      </div>
          <% end %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "チェックする", calendar_drugs_path, class: "btn btn-primary" %>