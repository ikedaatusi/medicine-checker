<h3 class="text-center text-2xl font-bold mb-6">パスワードリセット申請</h3>

<div class="container mt-4 mx-auto max-w-md p-6 bg-white rounded-lg shadow-md">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with url: password_resets_path, local: true, html: { class: 'space-y-6' } do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
          <%= f.email_field :email, class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500', placeholder: 'あなたのメールアドレスを入力してください' %>
        </div>
        <div class="text-center">
          <%= f.submit '申請', class: 'w-full px-4 py-2 bg-blue-600 text-white font-bold rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>