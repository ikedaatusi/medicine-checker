<div id="drug-id-<%= drug.id %>" class="w-full lg:w-1/3 p-2">
  <div class="h-full flex flex-col">
    <div class="card bg-white shadow-lg rounded-lg overflow-hidden flex flex-col h-full transition transform hover:-translate-y-1 hover:shadow-2xl">
      <!-- 画像 -->
      <figure class="overflow-hidden h-48 w-full">
        <%= image_tag drug.image_url_url, class: 'w-full h-full object-cover' %>
      </figure>
      <!-- カードの内容 -->
      <div class="card-body text-center flex flex-col p-4">
        <ul class="list-none my-3 flex-grow text-left space-y-2">
          <li><strong>病院名:</strong> <span class="text-gray-700"><%= drug.hospital_name %></span></li>
          <li><strong>薬名:</strong> <span class="text-gray-700"><%= drug.drug_name %></span></li>
          <li><strong>薬の数:</strong> <span class="text-gray-700"><%= drug.number_of_tablets %></span></li>
          <li><strong>期間開始日:</strong> <span class="text-gray-700"><%= drug.start_time %></span></li>
          <li><strong>期間終了日:</strong> <span class="text-gray-700"><%= drug.end_time %></span></li>
          <li><strong>服用タイミング:</strong></li>
          <% drug.take_times.each do |take_time| %>
            <li class="text-gray-600"><%= take_time.take_time %></li>
          <% end %>
          <li><strong>登録日:</strong> <span class="text-gray-700"><%= l drug.created_at, format: :short %></span></li>
        </ul>
        <!-- 編集・削除ボタン -->
        <div class="card-title flex justify-around mt-4 space-x-2">
          <%= link_to "編集", edit_drug_path(drug), class: "btn btn-primary px-4 py-2 rounded-lg bg-green-500 text-white border-2 border-green-500 hover:bg-green-600 transition transform hover:scale-105" %>
          <%= link_to "削除", drug_path(drug), data: { turbo_method: :delete, turbo_confirm: "削除しますか？" }, class: "btn btn-danger px-4 py-2 rounded-lg bg-red-500 text-white border-2 border-red-500 hover:bg-red-600 transition transform hover:scale-105" %>
        </div>
      </div>
    </div>
  </div>
</div>