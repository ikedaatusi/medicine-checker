<div class="flex flex-col items-center justify-center mt-10 mb-10">
  <div class="border-b-2 text-center w-full max-w-md">
    <p class="text-xl text-gray-900 mb-5">ログイン</p>
  </div>
</div>
<div class="flex justify-center">
  <div class="w-full max-w-md">
    <%= form_with url: login_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :email, "メールアドレス" %>
        <%= form.text_field :email, class: "w-full mb-4 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "name@flowbite.com" %>
      </div>
      <div class="form-group mt-5">
        <%= form.label :password, "パスワード" %>
        <%= form.password_field :password, class: "w-full mb-4 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "•••••••••" %>
      </div>
      <div class="text-center mt-10">
        <%= form.submit "ログイン", class: "w-full sm:w-auto mt-4 mb-4 focus:outline-none text-white bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:focus:ring-yellow-900" %>
      </div>
    <% end %>
  </div>
</div>
<div class="text-center my-4 mt-10">
<%= link_to 'Google ログイン', auth_at_provider_path(provider: :google), class: 'btn font-bold bg-orange text-white hover:bg-blue-700 py-2 px-10 rounded focus:outline-none focus:shadow-outline'  %>
</div>
<div class="text-center my-4 mt-10">
  <%= link_to "新規登録はこちら", new_user_path, class: "text-blue-500 hover:underline" %>
</div>
<div class="text-center my-4 mt-10">
  <%= link_to "パスワードをお忘れの方", new_password_reset_path, class: "text-blue-500 hover:underline" %>
</div>
<div class="flex justify-center my-4">
  <div class="w-full max-w-md">
    <div class="divider mb-4"></div>
  </div>
</div>
    
